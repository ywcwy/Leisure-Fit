<main>
  {{#if categoryName}}
  {{else}}
  <div class="jumbotron" style="background-color: #31583f;">
    <h3 class="display-4 text-white">大人的體育課</h3>
    <p class="lead text-white">一起在都市的束縛中，大力呼吸，解放心靈，奔放四肢</p>
    <hr class="my-4 bg-white">
    <p class="lead">
      <a class="btn  btn-white btn-md text-white" href="#" role="button" style="background-color: #de6548;">Ｍore...</a>
    </p>
  </div>
  {{/if}}
  <nav class="nav d-flex justify-content-center my-5">
    {{#ifCond user.isAdmin isAuthenticated}}
    <a role="button" class="btn btn-outline-secondary btn-sm nav-link mx-3" href="/admin/leisurefits">Admin</a>
    {{/ifCond}}
    {{#ifOne user.isAdmin isAuthenticated}}
    <a role="button" class="btn btn-outline-secondary btn-sm nav-link mx-3" href="/user/profile">My Profile</a>
    {{/ifOne}}
    <div class="dropdown show">
      <a class="btn btn-outline-secondary btn-sm nav-link dropdown-toggle" href="?categoryId=all" role="button"
        id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{#if categoryName}}
        {{categoryName}}
        {{else}}
        Training Course
        {{/if}}
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item" href="?categoryId=all">全部</a>
        {{#each categories}}
        <a class="dropdown-item" href="?categoryId={{this.id}}">{{this.name}}</a>
        {{/each}}
      </div>
    </div>
    <a role="button" class="btn btn-outline-secondary btn-sm nav-link mx-3" href="#">Calendar</a>
    <a role="button" class="btn btn-outline-secondary btn-sm nav-link" href="/location">Location</a>
    <a role="button" class="btn btn-outline-secondary btn-sm nav-link mx-3" href="#">Contact Us</a>
  </nav>
  <div class="container">
    <div class="row">
      {{#each leisurefits}}
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">
          <div class="card-body">
            <h5 class="card-text">{{this.name}}</h5>
            <lead class="d-flex mb-1"><a href="?categoryId={{this.CategoryId}}">
                #{{this.Category.name}}
              </a></lead>
            <p class="card-text">{{this.description}}</p>
            <div class="d-flex justify-content-around align-items-center">
              <a role="button" class="btn btn-info" href="/leisurefits/{{this.id}}">閱讀更多</a>
              {{#ifCond this.isLiked ../isAuthenticated}}
              <form action="/user/like/{{../this.id}}?_method=DELETE" method="POST" class="d-flex align-items-center">
                <button class="btn bg-white"><i class="fas fa-heart text-danger"></i></button>
              </form>
              {{else}}
              <form action="/user/like/{{../this.id}}" method="POST" class="d-flex align-items-center">
                <button class="btn bg-white"><i class="far fa-heart text-danger"></i></button>
              </form>
              {{/ifCond}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <br />
    <hr>
    <footer>
      <div class="row">
        <div class="col-lg-12">
          <p>Copyright &copy 2021, Leisure Fit</p>
        </div>
      </div>
    </footer>
  </div>
</main>