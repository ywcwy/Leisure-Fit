<main class="row mt-5 ml-5 d-flex justify-content-center">
  <div class="col-md-12">
    <h1 class=" d-flex justify-content-center">{{date}}</h1>
    <h5 class="mt-4 d-flex justify-content-center">時數：{{duration}}</h5>
    <h5 class=" d-flex justify-content-center">類別：{{category}}</h5>

  </div>
  <div class="col-md-8">
    <br>
    <div class="well">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col" width="20%">動作</th>
            <th scope="col" width="20%">器材</th>
            <th scope="col" width="20%">次數/組</th>
            <th scope="col" width="15%">組數</th>
          </tr>
        </thead>
        <tbody>
          {{#each training}}
          <tr>
            <td>{{this.exercise}} {{#if this.exerciseDescription }}（{{this.exerciseDescription}}）{{else}}{{/if}}</td>
            <td>{{#if this.equipment}}{{this.equipment}}{{else}}-{{/if}}
              {{#if this.equipmentDescription}}（{{this.equipmentDescription}}）{{else}}{{/if}}</td>
            <td>{{this.repetitions}}</td>
            <td>{{this.sets}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{!-- <ul class="list-unstyled">
        <li>動作：{{record.exercise}} {{#if record.exerciseDescription }}（{{record.exerciseDescription}}）{{/if}}</li><br>
        <li>器材：{{record.equipment}}{{#if record.equipmentDescription }}（{{record.equipmentDescription}}）{{else}}無{{/if}}
        </li><br>
        <li>次數：{{record.repetitions}} /組</li><br>
        <li>組數：共 {{record.sets}} 組</li><br>
        <li>Note: {{record.note}}</li><br>
        <li class="d-flex justify-content-center"><img src="{{record.image}}"></li>
      </ul> --}}
    </div>
  </div>
  <div class="col-md-12 d-flex justify-content-center my-5">
    <a href="javascript:history.back()" style="color: #31583f">回上一頁</a>
  </div>
</main>