<main class="d-flex justify-content-center">
  {{#if leisurefit}}
  <form action="/admin/leisurefits/{{leisurefit.id}}?_method=PUT" method="POST" class="my-5"
    enctype="multipart/form-data">
    <h2 class="d-flex justify-content-center">編輯貼文</h2>
    {{else}}
    <form action="/admin/leisurefits" method="POST" class="my-5" enctype="multipart/form-data">
      <h2 class="d-flex justify-content-center">新增貼文</h2>
      {{/if}}
      <br />
      <div class="form-group">
        <label for="categoryId">分類：</label>
        <select name="categoryId" id="categoryId" class="form-control" required="required">
          {{#each categories}}
          <option value={{this.id}} {{#ifSelected this.id ../leisurefit.CategoryId}}selected{{/ifSelected}}>
            {{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <br />
      <div class="form-group">
        <label for="name">標題：</label>
        <input type="text" name="name" id="name" class="form-control" required="required"
          value={{leisurefit.name}}></input>
      </div>
      <br />
      <div class="form-group">
        <label for="description">內文：</label>
        <textarea class="form-control" id="description" name="description"
          required="required">{{leisurefit.description}}</textarea>
      </div>
      <br />
      <div class="form-group">
        <label for="image">圖片：</label><br />
        <input type="file" name="image" id="image" class="form-control-file" value={{leisurefit.image}}></input>
      </div>
      <br />
      <div class="d-flex justify-content-center mt-3">
        <button type="submit" class="btn btn-info">
          {{#if leisurefit}}
          edit
          {{else}}
          create
          {{/if}}
        </button>
      </div>
      <div class="d-flex justify-content-center m-5">
        <a href="/admin/leisurefits">回後台首頁</a>
      </div>
    </form>
</main>