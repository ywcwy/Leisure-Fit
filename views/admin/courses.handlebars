<main class="m-5">
  <h1>後台</h1> {{>message}}
  <nav class="nav mt-5 mb-3">
    <a role="button" class="btn btn-outline-secondary btn-sm nav-link mx-3" href="/admin/leisurefits">Leisurefits</a>
    <a role="button" class="btn btn-outline-secondary btn-sm nav-link active" href="/admin/categories">Training
      Courses</a>
  </nav>
  <hr>
  {{#if category.id}}
  <form action="/admin/categories/{{category.id}}?_method=PUT" method="POST" class="d-flex align-items-center">
    {{else}}
    <form action="/admin/category" method="POST" class="d-flex align-items-center">
      {{/if}}
      Name: <input type="text" name="name" class="ml-2 mr-4" required="required" value={{category.name}}>
      Training Day: <input type="text" name="day" class="mx-2" required="required" value={{category.day}}>
      <button type="submit" class=" btn btn-info btn-sm">Submit</button>
    </form>

    <br />
    <br />
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Course</th>
          <th scope="col">Training Day</th>
          <th scope="col">#</th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.name}}</td>
          <td>{{this.day}}</td>
          <td>
            <button type="button" class="btn btn-link">
              <a href="/admin/categories/{{this.id}}">
                Edit
              </a>
            </button>
            <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-link">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
</main>