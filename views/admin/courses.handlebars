<main class="m-5">
  <h1>後台</h1>
  <nav class="nav my-5">
    <a role="button" class="btn btn-outline-secondary btn-sm nav-link mx-3" href="/admin/leisurefits">Leisurefits</a>
    <a role="button" class="btn btn-outline-secondary btn-sm nav-link active" href="/admin/categories">Training
      Courses</a>
  </nav>

  <form action="/admin/categories" method="POST" class="nav-link">
    <input type="text" placeholder="name" name="name">
    <button type="submit" class=" btn btn-info btn-sm">Submit</button>
  </form>

  <br />
  <br />
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Course</th>
        <th scope="col">Training Day</th>
        <th scope="col">#</th>
      </tr>
    </thead>
    <tbody>
      {{#each categories}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.day}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a href="/admin/categories/{{this.id}}">
              Edit
            </a>
          </button>
          <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</main>