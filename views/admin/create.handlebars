<div class="d-flex justify-content-center m-auto">
  <form action="/admin/leisurefits" method="POST" class="my-5" enctype="multipart/form-data">
    <div class="form-group">
      <label for="category">Category</label>
      <select name="category" id="category" class="form-control" required="required">
        <option value="Monday">Monday</option>
        <option value="Tuesday">Tuesday</option>
        <option value="Wednesday">Wednesday</option>
        <option value="Thursday">Thursday</option>
        <option value="Hiking">Hiking</option>
      </select>
    </div>
    <br />
    <div class="form-group">
      <label for="name">Title</label>
      <input type="text" name="name" id="name" class="form-control" required="required"></input>
    </div>
    <br />
    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" name="description" id="description" class="form-control" required="required"></input>
    </div>
    <br />
    <div class="form-group">
      <label for="image">Image</label><br />
      <input type="file" name="image" id="image" class="form-control-file" required="required"></input>
    </div>
    <br />
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-info">create</button>
    </div>
  </form>
</div>