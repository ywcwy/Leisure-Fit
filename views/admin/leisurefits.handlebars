<main class="m-5">
  <h1>後台</h1>

  <a href='/admin/leisurefits/create'>
    <button type="button" class="btn btn-info mt-3">New Post</button>
  </a>

  <br />
  <br />

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">id</th>
        <th scope="col">Title</th>
        <th scope="col">Training Day</th>
        <th scope="col">#</th>
      </tr>
    </thead>
    <tbody>
      {{#each leisurefits}} <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.Category.name}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a href="/admin/leisurefits/{{this.id}}">Show</a>
          </button>
          <button type="button" class="btn btn-link">
            <a href="/admin/leisurefits/{{this.id}}/edit">Edit</a>
          </button>
          <form action="/admin/leisurefits/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</main>