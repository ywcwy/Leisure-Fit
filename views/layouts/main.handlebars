  <script>
    function lineLogIn() {
      const URL = `https://access.line.me/oauth2/v2.1/authorize?`
      URL += `response_type = code`
      URL += `&client_id=${process.env.LINECORP_PLATFORM_CHANNEL_CHANNELID}`
      URL += `&redirect_uri=${process.env.LINECORP_PLATFORM_CHANNEL_CALLBACKURL}`
      URL += `&state=abcde`
      URL += `&scope=openid%20email%20profile`
      window.location.href = URL
    }
  </script>
